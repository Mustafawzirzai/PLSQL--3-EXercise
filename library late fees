DECLARE
    v_days   NUMBER := 8;   -- Example: delayed 8 days
    v_fine   NUMBER := 0;
    i        NUMBER := 1;
BEGIN
    WHILE i <= v_days LOOP
        IF i <= 5 THEN
            v_fine := v_fine + 10;  -- First 5 days → 10 AFN/day
        ELSE
            v_fine := v_fine + 20;  -- After 5 days → 20 AFN/day
        END IF;
        i := i + 1;
    END LOOP;

    DBMS_OUTPUT.PUT_LINE('Delayed Days = ' || v_days);
    DBMS_OUTPUT.PUT_LINE('Total Fine   = ' || v_fine || ' AFN');
END;
/
